- if user_signed_in?
  %li= link_to '参加者リスト', users_path
  %li.dropdown
    = link_to 'javascript:void(0)', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
      = current_user.name
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'Sign out', signout_path
- else
  %li= link_to 'Sign in', signin_path
